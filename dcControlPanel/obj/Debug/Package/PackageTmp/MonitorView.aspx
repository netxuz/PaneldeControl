<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="MonitorView.aspx.cs" Inherits="dcControlPanel.MonitorView" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
  <title>Panel de Control DebtControl</title>
  <link href="style/screen.css" type="text/css" rel="stylesheet" />
</head>
<body>
  <form id="form1" runat="server">
    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
      <tr>
        <td style="height: 50px; text-align: center; vertical-align: central;">
          <label class="titMantenedor">Mantenedor de Vistas</label>
        </td>
      </tr>
      <tr>
        <td style="background-color: #00619F; height: 5px;"></td>
      </tr>
      <tr>
        <td>
          <asp:Button ID="btnCrear" runat="server" Text="Crear" OnClick="btnCrear_Click" />
          <asp:Button ID="btnVolver" runat="server" Text="Volver" OnClick="btnVolver_Click" />
        </td>
      </tr>
      <tr>
        <td>
          <asp:GridView ID="gridPages" runat="server" CssClass="tbVistaMonitor" 
            BorderStyle="None" DataKeyNames="cod_monitor" BorderWidth="0" 
            GridLines="None"
            OnRowDeleting="gridPages_RowDeleting"
            OnSelectedIndexChanged="gridPages_SelectedIndexChanged" 
            OnPageIndexChanging="gridPages_PageIndexChanging"
            AutoGenerateDeleteButton="true"
            AutoGenerateSelectButton="true"
            AutoGenerateColumns="false">
            <Columns>
              <asp:BoundField ControlStyle-CssClass="tbTitRow" DataField="desc_monitor_view">
                <ItemStyle CssClass="tbTitRow" />
              </asp:BoundField>
            </Columns>
          </asp:GridView>
        </td>
      </tr>
    </table>
  </form>
</body>
</html>
