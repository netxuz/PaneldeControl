<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="kpi_list.aspx.cs" Inherits="dcControlPanel.kpi_list" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
  <title>Panel de Control DebtControl</title>
  <link href="style/screen.css" type="text/css" rel="stylesheet" />
</head>
<body>
  <form id="form1" runat="server">
    <table border="0" cellpadding="0" cellspacing="0" style="width: 100%;">
      <tr>
        <td style="height: 50px; text-align: center; vertical-align: central;">
          <label class="titMantenedor">Mantenedor de KPI</label>
        </td>
      </tr>
      <tr>
        <td style="background-color: #00619F; height: 5px;"></td>
      </tr>
      <tr>
        <td>
          <asp:Button ID="btnCrear" runat="server" Text="Crear" OnClick="btnCrear_Click" />
          <asp:Button ID="btnVolver" runat="server" Text="Volver" OnClick="btnVolver_Click" />
        </td>
      </tr>
      <tr>
        <td style="text-align: left">
          <asp:TextBox ID="txtKpi" CssClass="cTxtBuscar" runat="server"></asp:TextBox>
          <asp:Button ID="btnBuscar" runat="server" Text="Buscar" OnClick="btnBuscar_Click" />
        </td>
      </tr>
      <tr>
        <td>
          <asp:GridView ID="gridKpi" runat="server" CssClass="tbVistaMonitor" BorderStyle="None"
            DataKeyNames="cod_kpi" BorderWidth="0" GridLines="None" AllowPaging="true"
            OnRowDeleting="gridKpi_RowDeleting" 
            OnSelectedIndexChanged="gridKpi_SelectedIndexChanged" 
            OnRowDataBound="gridKpi_RowDataBound" 
            OnDataBound="gridKpi_DataBound" 
            OnPageIndexChanging="gridKpi_PageIndexChanging"
            AutoGenerateDeleteButton="true"
            AutoGenerateSelectButton="true"
            AutoGenerateColumns="false">
            <Columns>
              <asp:BoundField HeaderText="Nombre KPI" DataField="nombre_kpi">
                <HeaderStyle HorizontalAlign="Center" Width="300px" />
                <ItemStyle CssClass="tbTitRow" HorizontalAlign="Left" />
              </asp:BoundField>
              <asp:BoundField HeaderText="Identificador KPI" DataField="identificador_kpi">
                <HeaderStyle HorizontalAlign="Center" Width="400px" />
                <ItemStyle CssClass="tbTitRow" HorizontalAlign="Center" />
              </asp:BoundField>
              <asp:BoundField HeaderText="Estado" DataField="estado_kpi">
                <HeaderStyle HorizontalAlign="Center" Width="100px" />
                <ItemStyle CssClass="tbTitRow" HorizontalAlign="Center" />
              </asp:BoundField>
            </Columns>
          </asp:GridView>
        </td>
      </tr>
    </table>
  </form>
</body>
</html>
